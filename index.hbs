<div class="parallax-container">

    <div class="container">

        <div class="row">
            <div class="col s12">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="{{@blog.title}} logo" />
                {{/if}}
                <h2>{{@blog.description}}</h2>
            </div>
        </div>

    </div>

    <div class="parallax"><img src="{{asset "images/image1.jpg"}}"></div>
</div>

